{
	"name": "wplib/wplib",
	"type": "library",
	"description": "A PHP Library that Adds Modules and Applications to WordPress",
	"keywords": [ "wordpress", "php", "library", "mvc", "wplib", "modules" ],
	"homepage": "http://github.com/wplib/wplib",
 	"license": "GPL-2.0+",
	"authors": [
		{
			"name": "The WPLib Team",
			"email": "team@wplib.org",
			"homepage" : "http://wplib.org",
			"role" :  "Supporting Organization"
		},
		{
			"name": "Mike Schinkel",
			"email": "mike@newclarity.net",
			"homepage" : "http://about.me/mikeschinkel",
			"role" :  "Architect and Developer"
		}
	],
	"require": {
		"php": ">=5.6.0"
	},
	"require-dev": {
		"composer/installers": "^1.4",
		"johnpbloch/wordpress-core-installer": "*",
		"johnpbloch/wordpress-core": "*"
	},
	"autoload": {
		"psr-0": { "WPLib_": "includes/" }
	},
	"support": {
		"email": "support@wplib.org",
		"issues": "https://github.com/wplib/wplib/issues",
		"forum": "https://wplib.slack.com/",
		"source":"https://github.com/wplib/wplib",
		"docs": "http://wplib.org"
	},
	"extra": {
		"wordpress-install-dir": "wp"
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"johnpbloch/wordpress-core-installer": true,
			"ffraenz/composer-private-installers": true
		}
	}
}
